generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         String   @id @default(uuid())
  username   String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}

model translator {
  id               String   @id @default(uuid())
  username         String   @unique
  email            String   @unique
  password         String
  website          String
  translator_group String
  discord          String
  created_at       DateTime @default(now())
}

model manga_data {
  id                 String   @id @default(uuid())
  cover_image        String
  title              String
  alternative_titles String[]
  description        String
  type               String
  status             String
  artists            String[]
  authors            String[]
  genres             String[]
  publishers         String[]
}
